    <bean id="opfacceleratorcoreSystemSetup" class="de.hybris.platform.setup.OpfacceleratorcoreSystemSetup">
        <!-- constructor arg injection example -->
        <constructor-arg ref="opfacceleratorcoreService"/>
    </bean>

    <bean id="opfacceleratorcoreService" class="de.hybris.platform.service.impl.DefaultOpfacceleratorcoreService">
        <!-- setter injection example -->
        <property name="modelService" ref="modelService"/>
        <property name="mediaService" ref="mediaService"/>
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
    </bean>


    <bean id="opfAcceleratorRestTemplate" class="org.springframework.web.client.RestTemplate"/>

    <bean id="opfAcceleratorPaymentService" class="de.hybris.platform.service.impl.DefaultOPFAcceleratorPaymentService">
        <constructor-arg name="opfHttpClient" ref="opfHttpClient"/>
        <constructor-arg name="configurationService" ref="configurationService"/>
    </bean>

    <bean id="opfAcceleratorPaymentFacade" class="de.hybris.platform.facade.impl.DefaultOPFAcceleratorPaymentFacade">
        <constructor-arg name="opfAcceleratorPaymentService" ref="opfAcceleratorPaymentService"/>
        <constructor-arg name="opfAcceleratorCTARequestConverter" ref="opfAcceleratorCTARequestConverter"/>
        <constructor-arg name="opfAcceleratorCTAResponseConverter" ref="opfAcceleratorCTAResponseConverter"/>
        <constructor-arg name="opfAcceleratorActiveConfigResponseConverter"
                         ref="opfAcceleratorActiveConfigResponseConverter"/>

        <constructor-arg name="opfAcceleratorPaymentSessionRequestConverter"
                         ref="opfAcceleratorPaymentSessionRequestConverter"/>
        <constructor-arg name="opfAcceleratorPaymentSessionResponseConverter"
                         ref="opfAcceleratorPaymentSessionResponseConverter"/>
        <constructor-arg name="opfAcceleratorSubmitRequestConverter" ref="opfAcceleratorSubmitRequestConverter"/>
        <constructor-arg name="opfAcceleratorSubmitResponseConverter" ref="opfAcceleratorSubmitResponseConverter"/>
        <constructor-arg name="opfAcceleratorVerifyRequestConverter" ref="opfAcceleratorVerifyRequestConverter"/>
        <constructor-arg name="opfPaymentSubmitCompleteRequestConverter"
                         ref="opfPaymentSubmitCompleteRequestConverter"/>
        <constructor-arg name="opfPaymentSubmitCompleteResponseConverter"
                         ref="opfPaymentSubmitCompleteResponseConverter"/>
        <constructor-arg name="opfApplePayRequestConverter"
                            ref="opfApplePayRequestConverter"/>
    </bean>

    <alias name="opfAcceleratorPaymentCTARequestPopulator" alias="opfAcceleratorCTARequestPopulator"/>
    <bean id="opfAcceleratorPaymentCTARequestPopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentCTARequestPopulator"/>

    <alias name="opfAcceleratorPaymentCTAResponsePopulator" alias="opfAcceleratorCTAResponsePopulator"/>
    <bean id="opfAcceleratorPaymentCTAResponsePopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentCTAResponsePopulator"/>

    <alias name="opfAcceleratorPaymentActiveConfigResponsePopulator"
           alias="opfAcceleratorPaymentActiveConfigResponsePopulator"/>
    <bean id="opfAcceleratorPaymentActiveConfigResponsePopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentActiveConfigResponsePopulator"/>

    <alias name="opfAcceleratorPaymentSubmitRequestPopulator" alias="opfAcceleratorPaymentSubmitRequestPopulator"/>
    <bean id="opfAcceleratorPaymentSubmitRequestPopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentSubmitRequestPopulator">
        <constructor-arg ref="opfPaymentOrderConverter"/>
        <constructor-arg ref="commerceCheckoutCartFacade"/>
    </bean>

    <alias name="opfAcceleratorPaymentSubmitResponsePopulator" alias="opfAcceleratorPaymentSubmitResponsePopulator"/>
    <bean id="opfAcceleratorPaymentSubmitResponsePopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentSubmitResponsePopulator"/>

    <alias name="opfAcceleratorPaymentVerifyRequestPopulator" alias="opfAcceleratorPaymentVerifyRequestPopulator"/>
    <bean id="opfAcceleratorPaymentVerifyRequestPopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentVerifyRequestPopulator"/>

    <alias name="opfAcceleratorApplePayRequestPopulator" alias="opfAcceleratorApplePayRequestPopulator"/>
    <bean id="opfAcceleratorApplePayRequestPopulator"
          class="de.hybris.platform.populator.OPFAcceleratorApplePayRequestPopulator">
    <constructor-arg ref="commerceCheckoutCartFacade"/>
    </bean>

    <alias name="defaultOPFAcceleratorCTARequestConverter" alias="opfAcceleratorCTARequestConverter"/>
    <bean id="defaultOPFAcceleratorCTARequestConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.cta.request.OPFPaymentCTARequest"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorCTARequestPopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFAcceleratorCTAResponseConverter" alias="opfAcceleratorCTAResponseConverter"/>
    <bean id="defaultOPFAcceleratorCTAResponseConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.opf.dto.cta.CTAResponseDTO"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorCTAResponsePopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFActiveConfigResponseConverter" alias="opfAcceleratorActiveConfigResponseConverter"/>
    <bean id="defaultOPFActiveConfigResponseConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.opf.dto.cta.OPFActiveConfigDTO"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorPaymentActiveConfigResponsePopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFSubmitRequestConverter" alias="opfAcceleratorSubmitRequestConverter"/>
    <bean id="defaultOPFSubmitRequestConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.opf.dto.submit.OPFPaymentSubmitRequestDTO"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorPaymentSubmitRequestPopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFSubmitResponseConverter" alias="opfAcceleratorSubmitResponseConverter"/>
    <bean id="defaultOPFSubmitResponseConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.opf.dto.submit.OPFPaymentSubmitResponseDTO"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorPaymentSubmitResponsePopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFVerifyRequestConverter" alias="opfAcceleratorVerifyRequestConverter"/>
    <bean id="defaultOPFVerifyRequestConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.dto.OPFPaymentVerifyRequest"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorPaymentVerifyRequestPopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFAppleyPayRequestConverter" alias="opfApplePayRequestConverter"/>
    <bean id="defaultOPFAppleyPayRequestConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.data.request.OPFApplePayRequest"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorApplePayRequestPopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFHttpClient" alias="opfHttpClient"/>
    <bean id="defaultOPFHttpClient"
          class="de.hybris.platform.client.impl.DefaultOPFHttpClient"
          parent="defaultCCAdapterHttpClient">
        <constructor-arg name="tokenUrlKey" value="opf.oauth.token.url"/>
        <constructor-arg name="securityFileKey" value="opf.oauth.client-secret.file"/>
        <constructor-arg name="securityFileLocationKey"
                         value="opf.oauth.client-secret.file.location"/>
        <constructor-arg name="configurationService" ref="configurationService"/>
        <constructor-arg name="retryTemplate">
            <bean class="org.springframework.retry.support.RetryTemplate">
                <property name="backOffPolicy">
                    <bean class="org.springframework.retry.backoff.FixedBackOffPolicy">
                        <property name="backOffPeriod" value="2000"/>
                    </bean>
                </property>
                <property name="retryPolicy">
                    <bean class="org.springframework.retry.policy.ExceptionClassifierRetryPolicy">
                        <property name="policyMap">
                            <map>
                                <entry key="org.springframework.web.client.HttpServerErrorException$BadGateway">
                                    <bean class="org.springframework.retry.policy.SimpleRetryPolicy"/>
                                </entry>
                                <entry key="org.springframework.web.client.HttpServerErrorException$ServiceUnavailable">
                                    <bean class="org.springframework.retry.policy.SimpleRetryPolicy"/>
                                </entry>
                            </map>
                        </property>
                    </bean>
                </property>
            </bean>
        </constructor-arg>
    </bean>


    <alias name="defaultOPFAcceleratorPaymentSessionRequestPopulator"
           alias="opfAcceleratorPaymentSessionRequestPopulator"/>
    <bean id="defaultOPFAcceleratorPaymentSessionRequestPopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentSessionRequestPopulator">
        <property name="opfPaymentOrderConverter" ref="opfPaymentOrderConverter"/>
        <property name="cartFacade" ref="commerceCheckoutCartFacade"/>
    </bean>

    <alias name="defaultOPFAcceleratorPaymentSessionResponsePopulator"
           alias="opfAcceleratorPaymentSessionResponsePopulator"/>
    <bean id="defaultOPFAcceleratorPaymentSessionResponsePopulator"
          class="de.hybris.platform.populator.OPFAcceleratorPaymentSessionResponsePopulator"/>

    <alias name="defaultOPFAcceleratorPaymentSessionResponseConverter"
           alias="opfAcceleratorPaymentSessionResponseConverter"/>
    <bean id="defaultOPFAcceleratorPaymentSessionResponseConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.data.OPFInitiatePaymentData"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorPaymentSessionResponsePopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFAcceleratorPaymentSessionRequestConverter"
           alias="opfAcceleratorPaymentSessionRequestConverter"/>
    <bean id="defaultOPFAcceleratorPaymentSessionRequestConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.data.OPFInitiatePaymentSessionRequestData"/>
        <property name="populators">
            <list>
                <ref bean="opfAcceleratorPaymentSessionRequestPopulator"/>
            </list>
        </property>
    </bean>

    <!-- Start payment complete request and response converter and populator-->

    <alias name="defaultOPFPaymentSubmitCompleteRequestPopulator" alias="opfPaymentSubmitCompleteRequestPopulator"/>
    <bean id="defaultOPFPaymentSubmitCompleteRequestPopulator"
          class="de.hybris.platform.populator.OPFPaymentSubmitCompleteRequestPopulator">
        <property name="opfPaymentOrderConverter" ref="opfPaymentOrderConverter"/>
        <property name="cartFacade" ref="commerceCheckoutCartFacade"/>
    </bean>

    <alias name="defaultOPFPaymentSubmitCompleteResponsePopulator" alias="opfPaymentSubmitCompleteResponsePopulator"/>
    <bean id="defaultOPFPaymentSubmitCompleteResponsePopulator"
          class="de.hybris.platform.populator.OPFPaymentSubmitCompleteResponsePopulator"/>

    <alias name="defaultOPFPaymentSubmitCompleteResponseConverter" alias="opfPaymentSubmitCompleteResponseConverter"/>
    <bean id="defaultOPFPaymentSubmitCompleteResponseConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.data.OPFPaymentSubmitCompleteResponseData"/>
        <property name="populators">
            <list>
                <ref bean="opfPaymentSubmitCompleteResponsePopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFPaymentSubmitCompleteRequestConverter" alias="opfPaymentSubmitCompleteRequestConverter"/>
    <bean id="defaultOPFPaymentSubmitCompleteRequestConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.data.OPFPaymentSubmitCompleteRequestData"/>
        <property name="populators">
            <list>
                <ref bean="opfPaymentSubmitCompleteRequestPopulator"/>
            </list>
        </property>
    </bean>

    <alias name="defaultOPFPaymentOrderPopulator" alias="opfPaymentOrderPopulator"/>
    <bean id="defaultOPFPaymentOrderPopulator" class="de.hybris.platform.populator.OPFPaymentOrderPopulator">
        <property name="configurationService" ref="configurationService"/>
        <property name="commerceCommonI18NService" ref="commerceCommonI18NService"/>
    </bean>


    <alias name="defaultOPFPaymentOrderConverter" alias="opfPaymentOrderConverter"/>
    <bean id="defaultOPFPaymentOrderConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.opf.data.OPFOrderData"/>
        <property name="populators">
            <list>
                <ref bean="opfPaymentOrderPopulator"/>
            </list>
        </property>
    </bean>

    <bean parent="modifyPopulatorList">
        <property name="list" ref="cartConverter"/>
        <property name="add" ref="extendedCartPopulator"/>
    </bean>

    <alias name="defaultOPFCheckoutPaymentFacade" alias="opfCheckoutPaymentFacade"/>
    <bean id="defaultOPFCheckoutPaymentFacade" class="de.hybris.platform.facade.impl.DefaultOPFCheckoutPaymentFacade" parent="sapCheckoutPaymentFacade">
    </bean>

    <alias name="defaultOPFAddressFacade" alias="opfAddressFacade"/>
    <bean id="defaultOPFAddressFacade" class="de.hybris.platform.facade.impl.DefaultOPFAddressFacade">
    </bean>

    <alias name="defaultOpfOrderPaymentInfoPopulator" alias="opfOrderPaymentInfoPopulator"/>
    <bean id="defaultOpfOrderPaymentInfoPopulator"
          class="de.hybris.platform.populator.OPFOrderPaymentInfoPopulator">
    </bean>

    <bean parent="modifyPopulatorList">
        <property name="list" ref="orderConverter"/>
        <property name="add" ref="opfOrderPaymentInfoPopulator"/>
    </bean>

</beans>


